<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= @user.nickname + "さんの情報" %>
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">ニックネーム</th>
            <td class="table__cpl2"><%= @user.nickname %></td>
          </tr>
          <tr>
            <th class="table__col1">好きな球団</th>
            <td class="table__cpl2"><%= @user.like_team.name %></td>
          </tr>
        <tbody>
      </table>
      <h2 class="page-heading">
        <%= @user.nickname + "さんの募集投稿" %>
      </h2>
      <div class="user__card">
        <%= render partial: "baseballs/baseball", collection: @user.baseballs %>
      </div>
    </div>
  </div>
</div>
