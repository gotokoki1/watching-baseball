<!DOCTYPE html>
<html>
  <head>
    <title>WatchingBaseball</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.9.0/css/all.css">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <div class="inner">
        <div class="nav">
          <div class="nav_left">
            <%= link_to image_tag("baseball_logo.png"), root_path, class: :"nav_left" %>
          </div>
          <h1 class="nav-center">Watching Baseball</h1>
          <% if user_signed_in? %>
            <div class= "nav_right">
              <%= current_user.nickname %>
              <%= link_to "ログアウト",  destroy_user_session_path, method: :delete, class: :nav__logout %>
              <%= link_to "観戦仲間募集", new_baseball_path, class: :nav__btn %>
            </div>
          <% else %>
            <div class="nav_right">
              <%= link_to "ログイン", new_user_session_path, class: :nav__btn %>
              <%= link_to "新規登録", new_user_registration_path, class: :nav__btn %>
            </div>
          <% end %>
        </div>
      </div>
    </header>
    <%= yield %>
    <footer class="footer">
      <div class="container">Watching Baseball</div>
    </footer>
  </body>
</html>
