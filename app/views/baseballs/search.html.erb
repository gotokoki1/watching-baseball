<div class="search">
  <%= form_with(url: search_baseballs_path, local: true, method: :get, class: "search-form") do |form| %>
    <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
    <%= form.submit "検索", class: "search-btn" %>
  <% end %>
</div>
<div class="contents row">
  <% @baseballs.each do |baseball| %>
    <%= render partial: "baseball", locals: { baseball: baseball } %>
  <% end %>
</div>